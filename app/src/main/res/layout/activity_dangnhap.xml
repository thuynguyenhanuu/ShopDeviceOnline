<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DangnhapActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFEFE">

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Bạn vui lòng đăng nhập để mua sản phẩm"
            android:textSize="25sp"
            android:textColor="#2B2B2B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#050505"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edtsdtdnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Nhập số điện thoại" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="#050505"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtmatkhaudnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu" />
    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btndangnhap"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#050505"
            android:background="@drawable/my_button_1"
            android:text="Đăng nhập"/>
        <Button
            android:id="@+id/btnhuydnhap"
            android:layout_marginLeft="130dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#050505"
            android:background="@drawable/my_button_2"
            android:text="Hủy" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:text="Nếu bạn chưa có tài khoản. Vui lòng đăng ký tài khoản dưới link sau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0909EB"/>
        <Button
            android:id="@+id/btndangkytrangdangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:textColor="#4A74C9"
            android:background="#FFFEFE"
           />
    </LinearLayout>
</LinearLayout>