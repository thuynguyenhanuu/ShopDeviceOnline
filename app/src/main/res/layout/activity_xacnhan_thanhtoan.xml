<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.XacnhanThanhtoanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarxacnhan"
        app:title="Xác nhận thanh toán"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#E04B41">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollviewThanhtoan"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ người nhận"
                    android:textColor="#f000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtTentt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtSdttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdt"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtDiachitt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dia chi"
                    android:textSize="15sp" />

                <!--        </LinearLayout>-->

                <!--        <LinearLayout-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:orientation="vertical">-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình thức giao hàng"
                    android:textColor="#f000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtGiaohangtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hình thức"
                    android:textSize="15sp" />

                <!--        </LinearLayout>-->

                <!--        <LinearLayout-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:orientation="vertical">-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hình thức thanh toán"
                    android:textColor="#f000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtThanhtoantt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hình thức bac"
                    android:textSize="15sp" />


            </LinearLayout>

            <ListView
                android:id="@+id/listviewsanphammua"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ListView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="Tổng tiền"
                android:textColor="#f00"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="right|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTongtienthanhtoan"
                android:text="Gia tri"
                android:textColor="#f00"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonDathang"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#EC4A4A"
            android:text="Xác nhận"
            android:textColor="#FCFAFA" />
    </LinearLayout>








</LinearLayout>