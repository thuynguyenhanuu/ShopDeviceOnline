<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DangkyActivity"
    android:orientation="vertical"
    android:layout_margin="30dp">

        <TextView
            android:text="Đăng ký tài khoản"
            android:textColor="#f000"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textColor="#050505"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edttendky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập tên" />

        <TextView
            android:id="@+id/txtsdđky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#050505"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtsodienthoađky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Nhập số điện thoại"/>
        <TextView
            android:id="@+id/txtdiachiđky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="#050505"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtdiachiđky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập địa chỉ"/>
        <TextView
            android:id="@+id/txtmatkhaddky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="#050505"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtmatkhaudky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu" />
        <TextView
            android:id="@+id/txtxacnhanmatkhaudky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:textColor="#050505"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtxacnhanmatkhaudky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu" />

        <Button
            android:id="@+id/btndangkydky"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FCFBFB"
            android:background="#f000"
            android:text="Đăng ký"/>

        <Button
            android:id="@+id/btnhuydky"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FCFBFB"
            android:background="#f00"
            android:text="Hủy" />





</LinearLayout>