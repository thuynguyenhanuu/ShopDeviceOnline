<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChitietSanpham"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarChitietsp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Chi tiết sản phẩm"
        android:background="#797777"
        app:titleTextColor="#FDFCFC">

    </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgChitiet"
                    android:layout_width="200dp"
                    android:layout_height="280dp"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txttenchitiet"
                            android:text="Ten sp"
                            android:textColor="#044F8B"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtgiachitiet"
                            android:text="gia sp"
                            android:textColor="#CA0303"
                            android:layout_margin="10dp"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/spinner"
                        android:background="@drawable/spinner"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"></Spinner>

                    <Button
                        android:id="@+id/btnThem"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:text="Thêm vào giỏ hàng"
                        android:textColor="#050505"
                        android:textSize="15sp" />

                </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txttieudeMotachitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:text="Mô tả sản phẩm"
                android:textColor="#CA0303"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="390dp">

                <TextView
                    android:id="@+id/txtMotachitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="abchd"
                    android:textColor="#050505"
                    android:textSize="20sp" />
            </ScrollView>
        </LinearLayout>

</LinearLayout>